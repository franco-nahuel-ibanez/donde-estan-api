{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      "email/templates/**",
      {
        "include": "../assets",
        "outDir": "dist/assets",
        "watchAssets": true
      }
    ],
    "watchAssets": true
  },
  "exclude": ["node_modules", "tests", "src/migrations/**"]
}
